<Window x:Class="Pamola.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pamola.Viewer"
        mc:Ignorable="d"
        Title="Pamola Phasor Viewer" Height="450" Width="800" Background="Silver">
    <Grid>
        <Button
            x:Name="RotateButton"
            Content="Rotate Phasor" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="120" 
            Height="35" 
            Background="LightSkyBlue" 
            MouseEnter="RotateButton_MouseEnter"
            MouseLeave="RotateButton_MouseLeave"/>
    </Grid>
</Window>